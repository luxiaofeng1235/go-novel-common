jwt:
  secret: 6fdfff3591fbea8e84a936d8ec62157f

mysql:
  host: "127.0.0.1"
  port: 3306
  database: "novel"
  user: "root"
  password: "root"
  params: "charset=utf8mb4&parseTime=True&loc=Local"

redis:
  host: "127.0.0.1"
  port: 6379
  password: ""
  db: 0

logs:
  # 日志等级(-1:Debug, 0:Info, 1:Warn, 2:Error, 3:DPanic, 4:Panic, 5:Fatal, -1<=level<=5, 参照zap.level源码)
  level: -1
  # 日志路径
  path: logs
  # 文件最大大小, M
  max-size: 50
  # 备份数
  max-backups: 100
  # 存放时间, 天
  max-age: 30
  # 是否压缩
  compress: false
